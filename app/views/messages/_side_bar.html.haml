.sidebar
  .sidebar__header
    .sidebar__header__box
      %p.sidebar__header__name
        = current_user.name
      %ul.sidebar__header__icon
        = link_to new_group_path, class: "contents__btn--icon" do
          = icon('fab', 'twitch',  class: "contents__btn--icon")
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'icon')
  .sidebar__menu
    - current_user.groups.each do |group|
      .sidebar__menu__group
        = link_to group_messages_path(group) do
          %p.sidebar__menu__group__name
            =group.name
          %p.sidebar__menu__group__message
            = group.show_last_message
